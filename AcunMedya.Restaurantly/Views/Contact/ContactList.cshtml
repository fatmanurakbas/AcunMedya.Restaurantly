@model List<AcunMedya.Restaurantly.Entities.Contact>

@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/AdminLayout/adminlayout/Index.cshtml";
}




<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Anasayfa</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <form method="get">
        <div class=" form-group">
            <input type="text" name="searcText" placeholder="Aranacak kelime" class="form-control" />
            <br />
            <button class="btn btn-dark gradient-9">Ara</button>
        </div>
    </form>
    <div class="row">

        <!-- /# column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Mesajlar Listesi</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Gönderen İsim-Soyisim</th>
                                    <th>Email</th>
                                    <th>Konu</th>
                                    <th>Okundu Bilgisi</th>
                                    <th>Mesaj</th>
                                    <th>Gönderilen Zaman</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.ContactId</th>
                                        <th>@item.Name</th>
                                        <th>@item.Email</th>
                                        <th>@item.Subject</th>
                                        <td>@item.IsRead</td>
                                        <td>@item.Message</td>
                                        <th>@item.SendDate</th>




                                        <td><a href="/Contact/ContactDelete/@item.ContactId" class="btn btn-danger "> <i class="fa fa-close color-muted m-r-5"></i> Sil</a></td>
                                        <td><a href="/Contact/ContactEdit/@item.ContactId" class="btn btn-info gradient-2"> <i class="fa fa-edit color-muted m-r-5"></i>  Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Contact/ContactCreate" class="btn btn-info">Mesaj Ekle</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>
<!-- #/ container -->
