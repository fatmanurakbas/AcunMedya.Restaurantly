@model AcunMedya.Restaurantly.Entities.Event

@{
    ViewBag.Title = "EventCreate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Etkinlik Ekleme</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Etkinlik Ekleme Formu</h4>
                <div class="basic-form">
                    @using (Html.BeginForm("EventCreate", "Event", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label>Etkinlik Adı</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

                            <label>Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })

                            <label>Fiyat</label>
                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })

                            <label>Açıklama</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

                            <label>Etkinlik Resmi</label>
                            <input type="file" name="ImageFile" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-dark gradient-2">Etkinlik Ekle</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
