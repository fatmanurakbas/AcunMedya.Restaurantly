@model AcunMedya.Restaurantly.Entities.Chef

@{
    ViewBag.Title = "ChefEdit";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Şef Bilgileri Güncelleme</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Şef Bilgileri Güncelleme Formu</h4>
                <div class="basic-form">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.ChefId)

                            <label>Şef İsim-Soyisim</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

                            <label>Şef Alanı</label>
                            @Html.TextBoxFor(x => x.title, new { @class = "form-control" })

                            <label>Mevcut Fotoğraf</label>
                            <br />
                            <img src="@Model.ImageUrl" width="100" height="100" />
                            <br /><br />

                            <label>Yeni Fotoğraf Seç</label>
                            <input type="file" name="ImageFile" class="form-control" />

                        </div>

                        <button type="submit" class="btn btn-dark gradient-2">Şef Bilgileri Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
