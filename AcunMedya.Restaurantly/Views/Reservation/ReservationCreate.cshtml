@model AcunMedya.Restaurantly.Entities.Reservation
@{
    ViewBag.Title = "ReservationCreate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Rezervasyon Bilgileri Ekleme</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Rezervasyon Ekleme Formu</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">

                            <label>İsim-Soyisim</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

                            <label>Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })

                            <label>Telefon No</label>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })

                            <label>Rezervasyon Açıklaması</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

                            <label>Rezervasyon Günü</label>
                            @Html.TextBoxFor(x => x.ReservationDate, new { @class = "form-control" })

                            <label>Zaman</label>
                            @Html.TextBoxFor(x => x.Time, new { @class = "form-control" })

                            <label>Kişi Sayısı</label>
                            @Html.TextBoxFor(x => x.GuestCount, new { @class = "form-control" })

                            <label>Rezervasyon Durumu</label>
                            @Html.TextBoxFor(x => x.ReservationStatus, new { @class = "form-control" })

                        </div>

                        <button type="submit" class="btn btn-dark gradient-2">Revervasyon Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

