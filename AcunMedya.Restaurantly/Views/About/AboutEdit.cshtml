@model AcunMedya.Restaurantly.Entities.About
@{
    ViewBag.Title = "AboutEdit";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Hakkımda Güncelleme</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hakkımda Güncelleme Formu</h4>
                <br />
                <div class="basic-form">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.AboutId)

                            <label>Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })

                            <label>Açıklama</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

                            <label>Mevcut Resim</label>
                            <br />
                            <img src="@Model.imageUrl" width="150" height="150" />
                            <br /><br />

                            <label>Yeni Resmi Seç</label>
                            <input type="file" name="ImageFile" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-dark gradient-2">Hakkımda Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
