@model List<AcunMedya.Restaurantly.Entities.Notification>
@{
    ViewBag.Title = "NotificationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Anasayfa</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <form method="get">
        <div class=" form-group">
            <input type="text" name="searcText" placeholder="Aranacak kelime" class="form-control" />
            <br />
            <button class="btn btn-dark gradient-9">Ara</button>
        </div>
    </form>
    <div class="row">

        <!-- /# column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Bildirim Listesi</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Bildirim Başlık</th>
                                    <th>Gönderim Zamanı</th>
                                    <th>İconu</th>
                                    <th>İcon Rengi</th>
                                    <th>Okundu Bilgisi</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.NotificationId</th>
                                        <th>@item.Title</th>
                                        <th>@item.Time</th>
                                        <th>@item.Icon</th>
                                        <td>@item.Iconcolor</td>
                                        <td>@item.IsRead</td>




                                        <td><a href="/Notification/NotificationDelete/@item.NotificationId" class="btn btn-danger "><i class="fa fa-close color-muted m-r-5"></i>  Sil</a></td>
                                        <td><a href="/Notification/NotificationEdit/@item.NotificationId" class="btn btn-info gradient-2"><i class="fa fa-edit color-muted m-r-5"></i>  Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Notification/NotificationCreate" class="btn btn-info">Bildirim Ekle</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>
<!-- #/ container -->
